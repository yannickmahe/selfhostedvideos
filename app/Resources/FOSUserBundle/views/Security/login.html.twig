{% extends "YannickMaheSelfHostedVideosBundle::layout.html.twig" %}

{% block content %}
{% if error %}
    <div class="alert alert-error">
  		<button type="button" class="close" data-dismiss="alert">&times;</button>
    	{{ error|trans({}, 'FOSUserBundle') }}
    </div>
{% endif %}
<div style="margin-top: 30px;" class="login-form col-md-4">
<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="_password" required="required" />
    </div>
    

    <input type="submit" class="btn btn-primary btn-large btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
</div>
{% endblock content %}